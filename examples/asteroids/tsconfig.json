{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "outDir": "export",
    "useDefineForClassFields": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "types": ["love-typescript-definitions", "@typescript-to-lua/language-extensions", "lua-types/jit"]
  },
  "include": ["src"],
  "tstl": {
    "luaTarget": "JIT",
    "noImplicitSelf": true,
    "luaLibImport": "require-minimal",
    "luaBundle": "main.lua",
    "luaBundleEntry": "src/main.ts"
  }
}