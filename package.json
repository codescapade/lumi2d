{
  "name": "lilo2d-monorepo",
  "version": "0.1.0",
  "description": "A TypeScript Lua Game Engine on top of Love2d.",
  "scripts": {
    "build-lilo2d": "pnpm --filter lilo2d build",
    "lint-lilo2d": "pnpm --filter lilo2d lint",
    "prettier-lilo2d": "pnpm --filter lilo2d prettier-check",
    "test-lilo2d": "pnpm --filter lilo2d build-test",
    
    "lint-testprojects": "pnpm --parallel --filter ./testprojects/** lint",
    "prettier-testprojects": "pnpm --parallel --filter ./testprojects/** prettier-check",
    "build-testprojects": "pnpm --parallel --filter ./testprojects/** build",

    "build-lilo2d-atlas": "pnpm --filter lilo2d-atlas build",
    "lint-lilo2d-atlas": "pnpm --filter lilo2d-atlas lint",
    "prettier-lilo2d-atlas": "pnpm --filter lilo2d-atlas prettier-check",
    "test-lilo2d-atlas": "pnpm --filter lilo2d-atlas build-test"
  },
  "keywords": [],
  "author": "codescapade",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "love-typescript-definitions": "^11.4.2",
    "love.js": "github:codescapade/love.js#a1f878a00429633318d3daa226803194cea35a17",
    "lua-format": "^1.4.1",
    "lua-types": "^2.13.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2",
    "typescript-to-lua": "^1.20.1"
  }
}
