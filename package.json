{
  "name": "lilo2d-monorepo",
  "version": "0.1.0",
  "description": "A TypeScript Lua Game Engine on top of Love2d.",
  "scripts": {
    "build-lilo": "pnpm --filter @lilo2d/lilo build",
    "lint-lilo": "pnpm --filter @lilo2d/lilo lint",
    "prettier-lilo": "pnpm --filter @lilo2d/lilo prettier-check",
    "test-lilo": "pnpm --filter @lilo2d/lilo build-test",
    
    "lint-testprojects": "pnpm --parallel --filter ./testprojects/** lint",
    "prettier-testprojects": "pnpm --parallel --filter ./testprojects/** prettier-check",
    "build-testprojects": "pnpm --parallel --filter ./testprojects/** build",

    "build-atlas": "pnpm --filter @lilo2d/atlas build",
    "lint-atlas": "pnpm --filter @lilo2d/atlas lint",
    "prettier-atlas": "pnpm --filter @lilo2d/atlas prettier-check",
    "test-atlas": "pnpm --filter @lilo2d/atlas build-test"
  },
  "keywords": [],
  "author": "Codescapade",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "love-typescript-definitions": "^11.4.2",
    "love.js": "github:codescapade/love.js#a1f878a00429633318d3daa226803194cea35a17",
    "lua-format": "^1.4.1",
    "lua-types": "^2.13.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "typescript-to-lua": "^1.21.0"
  }
}
