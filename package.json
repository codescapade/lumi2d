{
  "name": "lumi2d-monorepo",
  "version": "0.1.0",
  "description": "A TypeScript Lua Game Engine on top of Love2d.",
  "scripts": {
    "build-lumi": "pnpm --filter @lumi2d/lumi build",
    "lint-lumi": "pnpm --filter @lumi2d/lumi lint",
    "prettier-lumi": "pnpm --filter @lumi2d/lumi prettier-check",
    "test-lumi": "pnpm --filter @lumi2d/lumi build-test",
    "lint-examples": "pnpm --parallel --filter {examples/**} lint",
    "prettier-examples": "pnpm --parallel --filter {examples/**} prettier-check",
    "build-examples": "pnpm --parallel --filter {examples/**} build",
    "export-examples": "pnpm --parallel --filter {examples/**} export-example",
    "build-atlas": "pnpm --filter @umi2d/atlas build",
    "lint-atlas": "pnpm --filter @lumi2d/atlas lint",
    "prettier-atlas": "pnpm --filter @lumi2d/atlas prettier-check",
    "test-atlas": "pnpm --filter @lumi2d/atlas build-test",
    "build-site": "pnpm export-examples && pnpm --filter site build"
  },
  "keywords": [],
  "author": "Codescapade",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "lua-format": "^1.4.1",
    "prettier": "^3.1.0",
    "syncpack": "^11.2.1"
  }
}
